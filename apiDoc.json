{
    "openapi": "3.0.0",
    "info": {
        "title": "Demo API for AWS API Gateway",
        "description": "A Simple OpenAPI Specification",
        "version": "0.1.0"
    },
    "paths": {
        "/addUser": {
            "post": {
                "description": "Add a new user",
                "summary": "Insert user to database",
                "operationId": "addUser",
                "requestBody": {
                    "description": "User details to add to the database",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "$ref": "#/components/schemas/addUserBody"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "new user registration successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User registered successfully"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "An error occured."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "addUserBody": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string",
                        "example": "john"
                    },
                    "lastName": {
                        "type": "string",
                        "example": "Doe"
                    }
                }
            }
        }
    }
}